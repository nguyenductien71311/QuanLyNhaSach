<h2>DANH SÁCH NHÂN VIÊN </h2>

<div id="search">
  
    <i class="material-icons">search</i>
    <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Nhập thông tin cần tìm" title="Type in a name">
    <button class="btn btn-outline-dark my-0 my-sm-0" type="submit">Tìm</button>
</div>

<div id="container">
  <div id="main">

    <hr id="hr2">
    <div class="infor" id="infor">
      <form action="" class="form" id="form-1">
        <table class="table table-bordered table-light" id="myTable">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Họ Tên</th>
              <th scope="col">SĐT</th>
              <th scope="col">Email</th>
              <th scope="col">Loại</th>
              <th scope="col">Địa chỉ</th>
              <th scope="col">Ngày sinh</th>
              <th scope="col">ID card</th>
            </tr>
          </thead>
          <tbody>
            {{#each list}}
            <tr>
              <th>{{idEmployee}}</th>
              <td>{{FullName}}</td>
              <td>{{PhoneNumber}}</td>
              <td>{{Email}}</td>
              <td>{{Type}}</td>
              <td>{{Address}}</td>
              <td>{{DateOfBirth}}</td>
              <td>{{Account_idAccount}}</td>
            </tr>

            {{/each }}
          </tbody>
        </table>

      </form>
    </div>
  </div>
  <div id="side" class="verticalLine">
    <form action="./staff/add" style="margin-top: 50px; margin-bottom: 50px;">
      <button class="btn btn-dark btn-lg px-5" type="submit">Thêm nhân viên</button>
    </form>

    <form action="./staff/edit" style="margin-top: 50px; margin-bottom: 50px;">
      <button class="btn btn-dark btn-lg px-5" type="submit">Sửa thông tin</button>
    </form>

  </div>