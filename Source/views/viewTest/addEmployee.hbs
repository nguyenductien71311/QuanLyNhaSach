<h2>THÊM NHÂN VIÊN MỚI</h2>

<div class="main">
    <form method="post" id="formAdd">
        <div class="profile">
            <input type="text" placeholder="Tên" name="FullName" autofocus>
            <input type="text" placeholder="Địa chỉ" name="Address" required>

            <input type="text" placeholder="Email" name="Email" required>
            <input type="tel" placeholder="Số điện thoại" name="PhoneNumber" pattern="[0-9]*" required>
            <input style="width: 360px;" type="date" placeholder="Ngày sinh" id="DateOfBirth" name="DateOfBirth" required/>

            <div style="width: 360px; font-size: 25px; margin-left: 300px; margin-top: 20px; ">
                <label for="Type">Chức vụ :</label>
                <select name="Type" id="Type" style="background-color: transparent;">
                    <option value="Quản lý">Quản lý</option>
                    <option value="Nhân viên">Nhân viên</option>
                </select>
            </div>
        </div>
        <div class="acc">
            <input type="text" id="Username" name="Username" placeholder="Username" required>
            <input type="password" id="Password" name="Password" placeholder="Password" required>
            <input type="password" id="PasswordConfirm" placeholder="Confirm password" required>
        </div>
        <button class="btn btn-dark btn-lg px-5" type="submit">Thêm</button>
    </form>
</div>
