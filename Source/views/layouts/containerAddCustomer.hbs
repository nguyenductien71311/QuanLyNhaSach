    <script>
        $('#formAdd').on('submit', function (event) {
            event.preventDefault();
            const phone = $('#phone').val();
            const name = $('#name').val();
            $.getJSON(`/staff/customer/is_available?phone=${name}|${phone}`, function (data) {
                if (data != -1) {
                    alert("Số điện thoại đã được dang ky");
                }
                else {
                    alert("Đăng ký thành công");
                    $('#formAdd').off('submit').submit();
                }
            })
        })
